# be vimlike
set editing-mode vi
set keymap vi-command

# Hit tab to list all completions & select first, or cycle through available 
# completions
TAB: menu-complete

# Shift-tab for backwards
"\e[Z": menu-complete-backwards

# make ctrl+l clear the screen (like in vim)
Control-l: clear-screen

# re-init without logout
"\C-R": re-read-init-file

# Allow case-insensitive auto-completion
set completion-ignore-case on
