[bitbucket]
	name = JKirchartzGH
	email = jkirchartz@garrisonhughes.com

[github]
	user = jkirchartz
	email = jkirchartz@gmail.com

[apply]
	# Detect whitespace errors when applying a patch
	whitespace = fix

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[push]
	default = current

[pull]
	rebase = true

[core]
	pager = less -R
	excludesfile = ~/dotfiles/gitignore_global

[diff]
	tool = vimdiff

[merge]
	log = true
	tool = vimdiff

[difftool]
	prompt = false

[mergetool]
	prompt = false
	keepBackup = false

[alias]
	br = branch
	caa = commit --all --amend --no-edit
	ci = commit
	co = checkout
	cob = checkout -b
	df = diff
	ds = diff --staged
	edit = !$EDITOR $(git status -s | awk '{print $2}')
	last = log --name-status HEAD^..HEAD
	lo = log --graph --branches --tags --decorate --format=oneline --abbrev-commit
	lob = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(refname:short) - %(objectname:short) - %(contents:subject) - %(authorname) (%(committerdate:relative))'
	ls = ls-files
	st = status
	undo = reset HEAD~1
	unstage = reset HEAD --
	up = pull --all --rebase --autostash
	this = !git init && git add . && git commmit -m \"Initial commit.\"
	dad = !curl https://icanhazdadjoke.com/

[url "https://github.com/"]
    insteadOf = gh:

[url "https://gist.github.com/"]
    insteadOf = gist:

[url "https://bitbucket.org/"]
    insteadOf = bb:

[url "https://gitlab.com/"]
    insteadOf = gl:

[http]
	postBuffer = 1048576000


[credential]
	helper = cache --timeout=28800
[pager]
	status = true

